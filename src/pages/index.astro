    <title>Learning Hub</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(to bottom, #f0f4ff, #ffffff);
        color: #333;
      }
      header {
        background: #4a6ee0;
        color: white;
        padding: 60px 20px 40px;
        text-align: center;
      }
      h1 {
        margin: 0;
        font-size: 3em;
      }
      .tagline {
        font-size: 1.4em;
        margin: 15px 0 40px;
        opacity: 0.95;
      }
      .buttons {
        display: flex;
        flex-direction: column;
        gap: 20px;
        max-width: 400px;
        margin: 0 auto;
      }
      .btn {
        background: white;
        color: #4a6ee0;
        padding: 18px 35px;
        font-size: 1.3em;
        font-weight: bold;
        border: none;
        border-radius: 50px;
        text-decoration: none;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        transition: all 0.3s;
      }
      .btn:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.25);
      }
      .btn.secondary {
        background: transparent;
        border: 2px solid white;
        color: white;
      }
      main {
        padding: 50px 20px;
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
      }
      nav {
        background: #333;
        padding: 12px;
        text-align: center;
        position: sticky;
        top: 0;
        z-index: 100;
        box-shadow: 0 2px 8px rgba(0,0,0,0.3);
      }
      nav a {
        color: white;
        margin: 0 20px;
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1em;
      }
      nav a:hover {
        color: #a0c0ff;
      }
      @media (min-width: 600px) {
        .buttons {
          flex-direction: row;
          justify-content: center;
        }
      }
    </style>
  </head>

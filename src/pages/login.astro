---
const title = 'Login - Learning Hub';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/learning">Learning</a>
      <a href="/timetable">Timetable</a>
      <a href="/login">Login</a>
    </nav>

    <div class="container">
      <h1>Login / Sign Up</h1>

      <form id="auth-form">
        <input type="email" id="email" placeholder="Email" required />
        <input type="password" id="password" placeholder="Password" required />
        <button type="submit" id="submit-btn">Sign Up / Log In</button>
      </form>

      <p id="message"></p>
      <p id="debug-info" style="color: #666; font-size: 0.9rem; margin-top: 1rem;"></p>
    </div>

    <script type="module">
      // Debug info
      document.getElementById('debug-info').textContent = 'Loading Supabase...';

      let supabase;
      try {
        const module = await import('../lib/supabase.js');
        supabase = module.supabase;
        document.getElementById('debug-info').textContent += ' Supabase imported OK';
      } catch (err) {
        document.getElementById('debug-info').textContent += ' Import failed: ' + err.message;
        console.error('Supabase import error:', err);
      }

      if (!supabase) {
        document.getElementById('message').textContent = 'Supabase not loaded – check console';
        document.getElementById('message').className = 'error';
        return;
      }

      const form = document.getElementById('auth-form');
      const message = document.getElementById('message');
      const btn = document.getElementById('submit-btn');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        message.textContent = '';
        btn.disabled = true;
        btn.textContent = 'Processing...';

        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value;

        if (!email || !password) {
          message.textContent = 'Fill in email and password';
          message.className = 'error';
          btn.disabled = false;
          btn.textContent = 'Sign Up / Log In';
          return;
        }

        try {
          // Try signup first
          let { data, error } = await supabase.auth.signUp({ email, password });

          if (error) {
            if (error.message.includes('already registered') || error.code === 'user_already_registered') {
              // Try login if exists
              ({ data, error } = await supabase.auth.signInWithPassword({ email, password }));
            }
          }

          if (error) {
            message.textContent = error.message || 'Error – see console';
            message.className = 'error';
            console.error('Auth error:', error);
          } else {
            message.textContent = data.session ? 'Logged in!' : 'Check email for confirmation';
            message.className = 'success';
            setTimeout(() => window.location.href = '/', 2500);
          }
        } catch (err) {
          message.textContent = 'Network or setup error: ' + err.message;
          message.className = 'error';
          console.error('Submit error:', err);
        }

        btn.disabled = false;
        btn.textContent = 'Sign Up / Log In';
      });
    </script>
  </body>
</html>

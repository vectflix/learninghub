---
const title = 'Login / Sign Up - Learning Hub';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/learning">Learning</a>
      <a href="/timetable">Timetable</a>
      <a href="/login">Login</a>
    </nav>

    <div class="container">
      <h1>Login / Sign Up</h1>

      <form id="auth-form">
        <input type="email" id="email" placeholder="Email" required autocomplete="email" />
        <input type="password" id="password" placeholder="Password" required autocomplete="current-password" />
        <button type="submit" id="submit-btn">Sign Up / Log In</button>
      </form>

      <p id="message"></p>
    </div>

    <script type="module">
      import { supabase } from '/src/lib/supabase.js';

      const form = document.getElementById('auth-form');
      const message = document.getElementById('message');
      const btn = document.getElementById('submit-btn');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        message.textContent = '';
        btn.disabled = true;
        btn.textContent = 'Loading...';

        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value;

        // Try sign up
        let { data, error } = await supabase.auth.signUp({ email, password });

        // If already registered, try sign in
        if (error && error.message.includes('already registered')) {
          ({ data, error } = await supabase.auth.signInWithPassword({ email, password }));
        }

        if (error) {
          message.textContent = error.message;
          message.className = 'error';
        } else {
          message.textContent = data.user ? 'Logged in successfully!' : 'Check your email to confirm signup';
          message.className = 'success';

          setTimeout(() => {
            window.location.href = '/timetable';
          }, 2000);
        }

        btn.disabled = false;
        btn.textContent = 'Sign Up / Log In';
      });
    </script>
  </body>
</html>

---
const title = 'Login - Learning Hub';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{title}</title>
    <!-- Fixed CSS path – Astro builds may hash it, but this should work if global.css is in dist/styles -->
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/learning">Learning</a>
      <a href="/timetable">Timetable</a>
      <a href="/login">Login</a>
    </nav>

    <div class="container">
      <h1>Login / Sign Up</h1>

      <form id="auth-form">
        <input type="email" id="email" placeholder="Email" required />
        <input type="password" id="password" placeholder="Password" required />
        <button type="submit" id="submit-btn">Sign Up / Log In</button>
      </form>

      <p id="message"></p>
    </div>

    <script type="module">
      // Use relative import – from pages/ to lib/
      import { supabase } from '../lib/supabase.js';

      console.log('Supabase client loaded:', supabase ? 'YES' : 'NO');
      console.log('Env vars available?', {
        url: import.meta.env.PUBLIC_SUPABASE_URL,
        key: import.meta.env.PUBLIC_SUPABASE_ANON_KEY ? 'YES (hidden)' : 'NO'
      });

      const form = document.getElementById('auth-form');
      const message = document.getElementById('message');
      const btn = document.getElementById('submit-btn');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        message.textContent = '';
        btn.disabled = true;
        btn.textContent = 'Processing...';

        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value;

        if (!email || !password) {
          message.textContent = 'Please fill email and password';
          message.className = 'error';
          btn.disabled = false;
          btn.textContent = 'Sign Up / Log In';
          return;
        }

        // Try signup
        let { data, error } = await supabase.auth.signUp({ email, password });

        // If already exists, try login
        if (error && (error.message.includes('already registered') || error.code === 'user_already_registered')) {
          ({ data, error } = await supabase.auth.signInWithPassword({ email, password }));
        }

        if (error) {
          message.textContent = error.message || 'Login failed – check console';
          message.className = 'error';
          console.error('Supabase error:', error);
        } else {
          message.textContent = data.session ? 'Logged in successfully!' : 'Check your email for confirmation link';
          message.className = 'success';
          console.log('Auth success:', data);

          // Redirect after 2s
          setTimeout(() => {
            window.location.href = '/timetable';
          }, 2000);
        }

        btn.disabled = false;
        btn.textContent = 'Sign Up / Log In';
      });
    </script>
  </body>
</html>

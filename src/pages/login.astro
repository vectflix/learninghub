---
const title = 'Login - Learning Hub';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/learning">Learning</a>
      <a href="/timetable">Timetable</a>
      <a href="/login">Login</a>
    </nav>

    <div class="container">
      <h1>Login / Sign Up</h1>

      <form id="auth-form">
        <input type="email" id="email" placeholder="Email" required />
        <input type="password" id="password" placeholder="Password" required />
        <button type="submit" id="submit-btn">Sign Up / Log In</button>
      </form>

      <p id="message"></p>
      <p id="debug" style="color:#64748b; font-size:0.9rem; margin-top:1rem; text-align:center;"></p>
    </div>

    <script type="module">
      document.getElementById('debug').textContent = 'Initializing...';

      let supabase;
      try {
        const { supabase: client } = await import('../lib/supabase.js');
        supabase = client;
        document.getElementById('debug').textContent = 'Supabase loaded successfully';
      } catch (err) {
        document.getElementById('debug').textContent = 'Failed to load Supabase: ' + err.message;
        console.error('Import error:', err);
        return;
      }

      const form = document.getElementById('auth-form');
      const message = document.getElementById('message');
      const btn = document.getElementById('submit-btn');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        message.textContent = '';
        btn.disabled = true;
        btn.textContent = 'Processing...';

        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value;

        if (!email || !password) {
          message.textContent = 'Please fill email and password';
          message.className = 'error';
          btn.disabled = false;
          btn.textContent = 'Sign Up / Log In';
          return;
        }

        try {
          let { data, error } = await supabase.auth.signUp({ email, password });

          if (error && (error.message.includes('already registered') || error.code === 'user_already_registered')) {
            ({ data, error } = await supabase.auth.signInWithPassword({ email, password }));
          }

          if (error) {
            message.textContent = error.message || 'Auth failed';
            message.className = 'error';
            console.error('Supabase auth error:', error);
          } else {
            message.textContent = data.session ? 'Logged in!' : 'Check your email for confirmation';
            message.className = 'success';
            setTimeout(() => window.location.href = '/', 2500);
          }
        } catch (err) {
          message.textContent = 'Network error: ' + err.message;
          message.className = 'error';
          console.error('Submit error:', err);
        }

        btn.disabled = false;
        btn.textContent = 'Sign Up / Log In';
      });
    </script>
  </body>
</html>
